{
  "title": "Vikunja â€“ Backend",
  "tags": ["vikunja", "backend"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Backend UP",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "up{job=\"vikunja-backend\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests / sec",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"vikunja-backend\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx Error Rate",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"vikunja-backend\",status=~\"5..\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"vikunja-backend\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"vikunja\",container!=\"POD\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"vikunja\",container!=\"POD\"})",
          "refId": "A"
        }
      ]
    }
  ]
}
